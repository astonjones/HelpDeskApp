@model IEnumerable<HelpDeskApp.Models.Ticket>;

<div class="d-flex justify-content-between py-3">
    <div>
        <h5>Got an IT problem? Create a ticket</h5>
    </div>
    <a class="btn btn-primary" asp-action="Create">Create Ticket</a>
</div>

<div>
    <h3>These are your active tickets</h3>
    <div>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Description
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.Name</td>
                        <td width="30%">@obj.Category</td>
                        <td width="50%">@obj.Description</td>
                        <td class="btn-group" role="group">
                            <a asp-controller="HelpDesk" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-outline-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="HelpDesk" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-2">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        }
        else
        {
            <p>You have not submitted any tickets</p>
        }
    </div>

</div>